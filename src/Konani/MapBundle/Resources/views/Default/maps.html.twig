{% block map %}
        <div clas="row">
            <div class="col-md-6 col-lg-6 col-sm-6 videos-row">

            </div>
            <div class="col-md-6 col-lg-6 col-sm-6">
                <div id="map-canvas"></div>

            </div>
        </div>

    <script>
        $(document).ready(function() {

            var first = true;
            var map = new GMaps({
                div: '#map-canvas',
                lat: 0,
                lng: 0,
                zoom:10,
                /*dragend: function(e) {
                    mark = [];
                    $.each(markers,function(key,val) {
                        contains = map.getBounds().contains(val.getPosition());
                        if (contains) {
                            mark.push(val['id']);
                        }
                    });
                    generateVideos(mark);
                },*/
                idle: function(e) {
                    mark = [];
                    $.each(markers,function(key,val) {
                        contains = map.getBounds().contains(val.getPosition());
                        if (contains) {
                            mark.push(val['id']);
                        }
                    });
                    generateVideos(mark);

                },
                tilesloaded: function(e) {
                    GMaps.geocode({
                        address: "{{ location }}",
                        callback: function(results, status) {
                            if (status == 'OK') {
                                if (first) {
                                    var latlng = results[0].geometry.location;
                                    map.setCenter(latlng.lat(), latlng.lng());
                                    first = false;
                                }
                            } else {
                                //could not find the location
                            }
                        }
                    });

                    mark = [];
                    $.each(markers,function(key,val) {
                        contains = map.getBounds().contains(val.getPosition());
                        if (contains) {
                            mark.push(val['id']);
                        }
                    });
                    generateVideos(mark);
                }
            });

            var markers = [];
            {% for video in videos %}
                markers.push(
                    map.addMarker({
                        lat:  {{ video.latitude }},
                        lng: {{ video.longitude }},
                        title: 'name',
                        id: '{{ video.id }}',
                        icon:"{{ asset('img/video_icon.png') }}",
                        click: function(e) {
                            $.ajax({
                                type: "POST",
                                url: Routing.generate('api_video_one_by_id', { id: {{ video.id }} })
                            })
                                    .success(function( data ) {
                                        $("div.info-"+data.id+" img").attr('src',data.thumbnail.url);
                                        $("div.info-"+data.id).show();
                                    });
                        },
                        infoWindow: {
                             content:
                             '<div class=" info-{{ video.id }}">' +
                                '<a href="{{ path('video_page',{'id': video.id }) }}"><img src=""></a>' +
                             '</div>'
                        }

                    })
                );
            {% endfor %}

        function generateVideos(markers) {
            var data;
            $.post('{{ path('konani_video_json') }}',{'videos':markers},function(visual) {
                data = visual;
                $('.video-not-found').remove();
                $('.videos-row ul').remove();
                $('.videos-row').append(data);
            });
            $(document).ajaxComplete(function(event,request, settings) {
                $('.video-not-found').remove();
                $('.videos-row ul').remove();
                $('.videos-row').append(data);
            });
        }
        });
    </script>

{% endblock %}